<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="2"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context=".HomeActivity"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:id="@+id/characterCard"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="10dp"
        android:onClick="onClick"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/characters"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Characters"
                android:background="@color/blue"
                android:textAlignment="center"
                android:textColor="@color/white"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/spellCard"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="10dp"
        android:onClick="onClick"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/spells"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Spells"
                android:background="@color/blue"
                android:textAlignment="center"
                android:textColor="@color/white"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/potionCard"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="10dp"
        android:onClick="onClick"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/potions"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Potions"
                android:background="@color/blue"
                android:textAlignment="center"
                android:textColor="@color/white"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bookCard"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="10dp"
        android:onClick="onClick"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/books"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Books"
                android:background="@color/blue"
                android:textAlignment="center"
                android:textColor="@color/white"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</GridLayout>