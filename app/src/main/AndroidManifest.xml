<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isep.roadtohogwarts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HPTest">
        <activity
            android:parentActivityName=".HomeActivity"
            android:name="com.isep.roadtohogwarts.CharacterActivity"
            android:exported="false"
            android:label="@string/title_activity_character" />
        <activity
            android:parentActivityName=".HomeActivity"
            android:name="com.isep.roadtohogwarts.SpellActivity"
            android:exported="false"
            android:label="@string/title_activity_spell" />
        <activity
            android:name="com.isep.roadtohogwarts.HomeActivity"
            android:exported="false" />
        <activity
            android:parentActivityName=".HomeActivity"
            android:name="com.isep.roadtohogwarts.PotionActivity"
            android:exported="false"
            android:label="@string/title_activity_potion" />
        <activity
            android:name="com.isep.roadtohogwarts.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:parentActivityName=".HomeActivity"
            android:name="com.isep.roadtohogwarts.BookActivity"
            android:exported="true" />
    </application>

</manifest>